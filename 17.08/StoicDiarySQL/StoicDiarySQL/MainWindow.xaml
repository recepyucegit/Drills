<Window x:Class="GunlukUygulamasi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Günlük Uygulaması" Height="600" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Şükür Günlüğü -->
            <GroupBox Header="Şükür Günlüğü" Margin="0 0 0 20">
                <StackPanel Margin="10">
                    <Label Content="1. Şükür:"/>
                    <TextBox x:Name="txtSukur1" Margin="0 0 0 10"/>
                    <Label Content="2. Şükür:"/>
                    <TextBox x:Name="txtSukur2" Margin="0 0 0 10"/>
                    <Label Content="3. Şükür:"/>
                    <TextBox x:Name="txtSukur3" Margin="0 0 0 10"/>
                </StackPanel>
            </GroupBox>

            <!-- Stoic Günlük -->
            <GroupBox Header="Stoic Günlük" Margin="0 0 0 20">
                <StackPanel Margin="10">
                    <Label Content="Bugün neleri yanlış yaptım?"/>
                    <TextBox x:Name="txtYanlislar" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 10"/>
                    <Label Content="Neleri nasıl düzeltebilirdim?"/>
                    <TextBox x:Name="txtDuzeltmeler" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 10"/>
                    <Label Content="Neleri doğru yaptım?"/>
                    <TextBox x:Name="txtDogrular" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 10"/>
                    <Label Content="Gün içinde yaptıklarım:"/>
                    <TextBox x:Name="txtGunIcinde" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 10"/>
                </StackPanel>
            </GroupBox>

            <!-- Butonlar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnKaydet" Content="Kaydet" Width="120" Height="40" Margin="10" Click="btnKaydet_Click"/>
                <Button x:Name="btnGoruntule" Content="Günlükleri Görüntüle" Width="160" Height="40" Margin="10" Click="btnGoruntule_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
