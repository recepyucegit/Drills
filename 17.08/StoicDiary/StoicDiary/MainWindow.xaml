<Window x:Class="GunlukUygulamasi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Günlük Uygulaması" Height="600" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Şükür Günlüğü -->
            <GroupBox Header="🙏 Şükür Günlüğü" FontWeight="Bold" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="1. Şükür:" Width="100"/>
                        <TextBox Name="txtSukur1" Width="600"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="2. Şükür:" Width="100"/>
                        <TextBox Name="txtSukur2" Width="600"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="3. Şükür:" Width="100"/>
                        <TextBox Name="txtSukur3" Width="600"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Stoic Günlük -->
            <GroupBox Header="🧘 Stoic Günlük" FontWeight="Bold">
                <StackPanel Margin="10">
                    <Label Content="1) Bugün neleri yanlış yaptım?"/>
                    <TextBox Name="txtYanlislar" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

                    <Label Content="2) Neleri nasıl düzeltebilirdim?"/>
                    <TextBox Name="txtDuzeltmeler" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

                    <Label Content="3) Neleri doğru yaptım?"/>
                    <TextBox Name="txtDogrular" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

                    <Label Content="4) Gün içinde yaptıklarım:"/>
                    <TextBox Name="txtGunIcinde" AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>

            <!-- Butonlar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Name="btnKaydet" Content="💾 Kaydet" Width="120" Height="40" Margin="10"
                        Click="btnKaydet_Click"/>
                <Button Name="btnGoruntule" Content="📖 Günlükleri Görüntüle" Width="180" Height="40" Margin="10"
                        Click="btnGoruntule_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
